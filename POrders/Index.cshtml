@model IEnumerable<Sprint0.Models.POrder>

@{
    ViewBag.Title = "Index";
}
<br />
<h2> PURCHASED ORDERS</h2>
<br />

<div class="well">
    <table class="table table-hover table-striped">
        <tr>
            <th>
               Order No.
            </th>
            <th>
                Order Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Items</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>

                    @Html.ActionLink("Details", "GetDetails", new { item.OrderID }, new { @class = "btn btn-info" })


                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderID }, new { @Class = "btn btn-warning" }) 

                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderID }, new { @Class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>