@model IEnumerable<Sprint0.Models.POrderDetail>

@{
    ViewBag.Title = "POrderItems";
}
<br />
    <h2>PURCHASED ORDER DETAILS</h2>
<br/>

<div class="well">
    <table class="table table-hover table-striped">
        <tr>

            <th>
                Product Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Unit Price
            </th>
            <th>
             Total Price  
            </th>
            <th></th>
            @*<th>@Html.DisplayNameFor(model => model.OrderProg)</th>*@
        </tr>

        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            @Html.DisplayFor(modelItem => item.OrderID)
            <td></td>
            @Html.DisplayFor(modelItem => item.OrderID)
            <td>








                @Html.ActionLink("Delete", "Delete", new { id = item.OrderItemsID }, new { @Class = "btn btn-danger" })
            </td>
        </tr>
        }

      



    </table>
    <p><a href="@Url.Action("Index", new { @class="btn btn-success" })">Back</a></p>
</div>


