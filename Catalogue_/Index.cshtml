@model IEnumerable<Sprint0.Models.Catalogue_>

@{
    ViewBag.Title = "Index";
}
<div style="width:100%; height:40px; background-color:#dbdbdb;">
    <h2 class="text-center">Catalogues</h2>
</div>
<div class="well">
    <p>
        @Html.ActionLink("New Catalogue", "Create", "Catalogue_", null, new { @Class = "btn btn-primary" })

        @Html.ActionLink("<< Create Product", "Create", "InventoryProducts", null, new { @Class = "btn btn-success pull-right" })
    </p>
    <table class="table table-hover">
        <tr style="background-color:#c8c8c8">
            <th>
                @Html.DisplayNameFor(model => model.catalogueName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.catalogueName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.catalogueId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.catalogueId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.catalogueId })
                </td>
            </tr>
        }

    </table>
</div>

